
Private Sub TextBox1_LostFocus()

    Dim targetDate As Date
    Dim strDate As String
    
    '変換できる値かを調べる
    If IsDate(Worksheets("Sheet1").TextBox1.Value) = False Then
      
      MsgBox "有効な日付を入力してください"
      Exit Sub
    
    End If
    
    targetDate = Worksheets("Sheet1").TextBox1.Value
    
    '// 年月日（スラッシュ区切り）
    strDate = Format(targetDate, "yyyymmdd")
    
    'output()を呼び出して出力する
    Call output(strDate)
    
End Sub

'初期表示
Private Sub Worksheet_Activate()
    Debug.Print "Worksheet_Activateイベントが発生しました。" & g_cnsModuleName
    
      Dim nowdate As Date
      'DateDiff関数を使って開始から終了までを指定
      '第3引数を取得した日から+4ににしたい
    nowdate = DateDiff("yyyymmdd", Date, 4)
    
    TextBox1.Value = Format(Date, "yyyymmdd")
    
End Sub


'前日ボタン
Sub daybefore_Click()

    Dim targetDate As Date
    Dim previousDate As Date
    Dim strDate As String
    
    If IsDate(Worksheets("Sheet1").TextBox1.Value) = False Then
      
      MsgBox "有効な日付を入力してください"
      Exit Sub
    
    End If
    
    'テキストの値を取得したい
    targetDate = Worksheets("Sheet1").TextBox1.Value
    
    
    '書き方調べ中
    'DateDiff("yyyymmdd", targetDate, targetDate+4)
    
    
    '1日前の日付を取得したい
    previousDate = DateAdd("d", -1, targetDate)
    
    Me.TextBox1.Value = previousDate
    
    '// 年月日（スラッシュ区切り）
    strDate = Format(previousDate, "yyyymmdd")
    
    
    'output()を呼び出して出力する
    Call output(strDate)
   
End Sub

Sub nextday_Click()

Dim targetDate As Date
Dim previousDate As Date
Dim strDate As String
    
    If IsDate(Worksheets("Sheet1").TextBox1.Value) = False Then
      
      MsgBox "有効な日付を入力してください"
      Exit Sub
    
    End If
    
    'テキストの値を取得したい
    targetDate = Worksheets("Sheet1").TextBox1.Value
    
    
    '1日前の日付を取得したい
    previousDate = DateAdd("d", 1, targetDate)
    
    Me.TextBox1.Value = previousDate
    
    '// 年月日（スラッシュ区切り）
    strDate = Format(previousDate, "yyyymmdd")
    
    
    'output()を呼び出して出力する
    Call output(strDate)
     
End Sub

