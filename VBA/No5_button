Private Sub Worksheet_Activate()
    Debug.Print "Worksheet_Activateイベントが発生しました。" & g_cnsModuleName
    
      Dim nowdate As Date
    nowdate = Data
    
    TextBox1.Value = Format(Date, "yyyy年mm月dd日")
    
End Sub

'前日ボタン
Sub daybefore_Click()

    Dim a As Date
    
    'テキストの値を取得したい
    a = Worksheets("Sheet1").TextBox1.Value
    
    '1日前の日付を取得したい
    Me.TextBox1.Value = DateAdd("d", -1, a)
    
    'output()を呼び出して出力する
    'call output（引数）
   
End Sub



Sub nextday_Click()

     Me.TextBox1.Value = DateAdd("d", -1, Date)
     
End Sub

